<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ketemploy.uts_pbb.Bulutangkis">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:layout_toStartOf="@+id/editText2" />

    <Button
        android:id="@+id/Plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/minus"
        android:layout_toEndOf="@+id/editText2"
        android:text="+"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="Jenis Olahraga yang dipilih :"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BULU TANGKIS"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/Lakukan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lakukan Olahraga"
        android:textSize="20dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/minus"
        android:layout_centerHorizontal="true" />
</RelativeLayout>